{
  "name": "@mansteve/shuttle-react-native",
  "version": "1.0.0",
  "description": "React Native/Expo bindings for Shuttle - Mobile wallet connections for Cosmos dApps",
  "keywords": [
    "shuttle",
    "dapp",
    "blockchain",
    "wallets",
    "cosmos-sdk",
    "cosmos",
    "typescript",
    "react-native",
    "expo",
    "mobile",
    "wallet-connect",
    "cosmos-wallets"
  ],
  "author": "Stefanos Chatzakis <chatzakis.stef@gmail.com>",
  "license": "MIT",
  "module": "./dist/index.mjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "react-native": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/StefChatz/shuttle.git",
    "directory": "packages/react-native"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --treeshake",
    "dev": "pnpm run build --watch",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests}/**/*.{js,ts,jsx,tsx}\"",
    "test": "jest --config jestconfig.json --passWithNoTests",
    "prepublishOnly": "pnpm run test && pnpm run lint"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-native": ">=0.70"
  },
  "dependencies": {
    "@delphi-labs/shuttle": "workspace:*",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "tslib": "^2.6.0",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@swc/core": "^1.3.68",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.14",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-resolver-enhanced": "^1.1.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-native": "^0.73.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3",
    "tsup": "^7.1.0"
  }
}
